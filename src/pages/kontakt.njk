---
title: "Kontakt"
layout: "layouts/home.njk"
permalink: /kontakt/
---

<div class="stack-3xl">

  <div class="grid-background">
    <div class="wrapper stack-xl" style="padding-block-start: var(--space-2xl);">
      <h1 class="text-bright-turquoise text-step-4 sr-only">{{ ctfl.pageLocations.title }}</h1>

      {% for location in ctfl.pageLocations.locations %}
        <article class="location | sidebar-left"
        style="
          --sidebar-width: clamp(40rem, 60vw, 50rem);
          --sidebar-gap: var(--space-l);
          --sidebar-gap-vertical: var(--space-s);
          --sidebar-threshold: 20rem;
          flex-direction: row-reverse;"
             >
          <div class="location__image">
            {% ctflPicture
            imgObj = location.fields.image,
            imgWidth="1024",
            imgHeight="340",
            fit="fill",
            widths=[300, 500, 1024],
            sizes = "(min-width: 50em) 34.75rem, 100vw"
          %}
          </div>
          <div class="stack-2xs">
            <h2 class="text-step-1 uppercase my-stack-space-s">{{ location.fields.title }}</h2>
            <p class="letterspace">{{ location.fields.address | markdown | safe }}</p>
          </div>
        </article>
      {% endfor %}
    </div>
  </div>

  <hr class="highlight-divider">

  <div class="stack-2xl">
    <div class="wrapper | stack-s text-center" style="--wrapper-max-width: 53rem;">
      <h2 class="text-bright-turquoise text-step-4" lang="en" aria-label="10 times digital health">
        Kontakt</h2>
      <div class="plain-html">
        <p>10xD GmbH<br>
        Schadowplatz 12<br>
        40212 Düsseldorf<br>
        Mail: <a href="mailto:info@10xd.de">info@10xd.de</a><br>
        Web: <a href="www.10xd.de">www.10xd.de</a><br><br>
        Geschäftsführer: Adam Gründer<br>
        Amtsgericht Düsseldorf HRB 98989
        </p>
      </div>
    </div>
  </div>
</div>
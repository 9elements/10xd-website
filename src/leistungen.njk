---
title: "Leistungen"
layout: "layouts/home.njk"
permalink: /leistungen/
---

<div class="grid-background">
  <div class="wrapper stack-2xl" style="padding-block-start: var(--space-2xl);">
    <h1 class="color-brightTurquoise text-step-4">Leistungen</h1>
    <div class="grid-switcher" style="
      --gs-columns-lg: 2;
      --gs-gap: var(--space-2xl);
      --gs-bp-md: 45rem;
    ">
      {% for service in ctfl.pageServices.services %}
        <article aria-label="{{ service.fields.title }}" class="stack-2xs" id="{{ service.fields.title | slug }}" style="scroll-margin-top: var(--space-l);">
          {% ctflPicture
            imgObj = service.fields.image,
            alt = "",
            imgWidth="800",
            imgHeight="400",
            fit="fill",
            widths=[300, 556, 800],
            sizes = "(min-width: 50em) 34.75rem, 100vw"
          %}
          <h2 class="text-step-1 uppercase my-stack-space-s">{{ service.fields.title }}</h2>
          <p class="letterspace">{{ service.fields.description | markdownFilter | safe }}</p>
        </article>
      {% endfor %}
    </div>
  </div>
</div>
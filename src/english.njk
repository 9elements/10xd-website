<div class="stack-2xl" style="position: relative;">
  <div class="wrapper stack-2xl" style="padding-block-start: var(--space-3xl);">
    <div class="wrapper stack-m" style="--wrapper-max-width: 64ch;">
      <h2 class="color-brightTurquoise text-step-4">{{ ctfl.pageEnglisch.headline }}</h2>
      <p class="letterspace">
        {{ ctfl.pageEnglisch.text | renderRichTextAsHtml | safe }}
      </p>

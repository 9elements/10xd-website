    <hr class="highlight-divider">

    <div style="margin-inline:auto; width: fit-content;">
      {% ctflPicture
          imgObj = ctfl.pageEnglisch.image,
          alt = "",
          widths = [300, 500, 800, 1024],
          sizes = "(min-width: 72.5em) 800px, 100vw"
        %}
    </div>
  </div>

</div>
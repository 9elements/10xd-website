---
title: "Formate"
layout: "layouts/home.njk"
permalink: /formate/
---

<div class="grid-background stack-2xl">
  <div class="wrapper stack-2xl" style="--wrapper-max-width: 80rem; padding-block-start: var(--space-2xl);">
    <h1 class="color-brightTurquoise text-step-4">{{ ctfl.pageFormats.title }}</h1>

    <div class="stack-xl-2xl">
      {% for format in ctfl.formats %}
        <article class="format | sidebar-left"
          style="
            --sidebar-width: clamp(40rem, 60vw, 50rem);
            --sidebar-gap: var(--space-l);
            --sidebar-gap-vertical: var(--space-s);
            --sidebar-threshold: 20rem;
            flex-direction: row-reverse;"
        >
          <div>
            {% ctflPicture
              imgObj = format.fields.image,
              fit="fill",
              imgWidth="1024",
              imgHeight="340",
              widths = [300, 500, 800, 1024],
              sizes = "(min-width: 72.5em) 800px, 100vw",
              classes = "format__image"
            %}
          </div>
          <div class="stack-2xs">
            <h2 class="text-step-1 uppercase">{{ format.fields.title }}</h2>
            <p>
              {{ format.fields.location }}, {{ format.fields.startDate | readableDate({ month: "long", day: "numeric", year: "numeric" }) }}<br>
              Tickets: {{ format.fields.ticketCount}} | {{ format.fields.ticketStatus }}
            </p>
            {% if format.fields.link %}
              <a href="{{ format.fields.link }}" class="format__link" target="_blank"><span class="sr-only">Zum Format: {{ format.fields.title }}</span></a>
            {% endif %}
          </div>
        </article>
      {% endfor %}
    </div>

    <hr class="highlight-divider">

  </div>

  <div class="center-text stack-l">
    <h2 class="text-step-4">Impressionen</h2>
    <div class="slider">
      <div class="slider__row">
        {% for image in ctfl.pageFormats.impressions %}
          {% ctflPicture
              imgObj = image,
              imgHeight = 500,
              fit="fill",
              widths=[none],
              sizes = width + "px"
            %}
        {% endfor %}
      </div>
    </div>
  </div>

  <div class="wrapper stack-2xl" style="--wrapper-max-width: 80rem;">

    <hr class="highlight-divider">

    <div class="stack-m center-text">
      <h2 class="text-step-4" >Event-Slide</h2>
      <form class="event-form" action="/event/" target="_blank">
        <div class="event-form__inputgroup">
          <label for="eventText">Slide Text:</label>
          <input type="text" id="eventText" name="eventText" value="Innovative Formate im Gesundheitswesen">
        </div>
        <input type="submit" value="Slide anzeigen" class="uppercase weight-bold">
      </form>
    </div>
  </div>
</div>